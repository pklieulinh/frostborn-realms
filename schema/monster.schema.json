{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Monster",
  "type": "object",
  "required": ["monsters"],
  "properties": {
    "monsters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "key", "name"],
        "properties": {
          "id": { "type": "integer" },
          "key": { "type": "string" },
          "name": { "type": "string" },
          "threatTier": { "type": "integer" }
        }
      }
    }
  }
}