{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Event",
  "type": "object",
  "required": ["events"],
  "properties": {
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "key", "title", "description"],
        "properties": {
          "id": { "type": "integer" },
          "key": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "choices": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["key", "description"],
              "properties": {
                "key": { "type": "string" },
                "description": { "type": "string" },
                "effects": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        }
      }
    }
  }
}