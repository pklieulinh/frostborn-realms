{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Item",
  "type": "object",
  "required": ["items"],
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "category"],
        "properties": {
          "id": { "type": "integer" },
            "name": { "type": "string" },
            "category": { "type": "string" },
            "perishable": { "type": "boolean" }
        }
      }
    }
  }
}